<%= simple_form_for(@category, :html => { :class => '' }) do |f| %>
 
  <div class="form-inputs">
    <%= f.input :title, input_html: { class: "" } %>
    <%= f.input :description, as: :string, input_html: { class: "" } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", input_html: { class: "button radius" } %>
  	<%= link_to 'Back', categories_path, class: "button radius" %>
  </div>
<% end %>
