<%= simple_form_for(@category, :html => { :class => 'form-horizontal' }) do |f| %>
 
  <div class="form-inputs">
    <%= f.input :title, input_html: { class: "span6" } %>
    <%= f.input :description, as: :string, input_html: { class: "span6" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save", class: 'btn-primary' %>
  	<%= link_to 'Back', categories_path, class: "btn btn-default" %>
  </div>
<% end %>
