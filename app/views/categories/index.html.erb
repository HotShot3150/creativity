<h1>Categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <% if can? :create, Category %>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.title, category %></td>
    <td><%= category.description %></td>
    
    <% if can? :update, category %>
      <td><%= link_to 'Edit', edit_category_path(category), class: "button small radius" %></td>
    <% end %>
    <% if can? :destroy, category %>
      <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "button small alert radius" %></td>
    <% end %>    
  </tr>
<% end %>
</table>

<br />

<%= link_to('New Category', new_category_path, class: "button radius", role: "button") if can? :create, Category %>
