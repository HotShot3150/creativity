<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Author:</b>
  <%= @post.user.full_name %>
</p>

<p>
  <b>Category:</b>
  <%= link_to @post.category.title, category_path(@category) %>
</p>


<% if can? :update, @post %>
  <%= link_to 'Edit', edit_category_post_path(@category, @post), class: "button radius" %>
<% end %>
<% if can? :destory, @post %>
  <%= link_to 'Delete', category_post_path(@category, @post), method: :delete, data: { confirm: 'Are you sure?' }, class: "button radius alert" %>
<% end %>